<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color" >

    <TextView
        android:id="@+id/afterschoolSubCatActivity_text"
        android:layout_width="match_parent"
        android:layout_height="30dip"
        android:layout_alignParentTop="true"
        android:layout_marginTop="2dip"
        android:background="@color/gray"
        android:gravity="center_vertical"
        android:text="@string/afterschool_activity_text"
        android:textColor="@color/black_color"
        android:textSize="18sp"
        android:paddingLeft="15dip"/>

    <TextView
        android:id="@+id/afterschoolSubCategory_text"
        android:layout_width="match_parent"
        android:layout_height="30dip"
        android:layout_below="@id/afterschoolSubCatActivity_text"
        android:text=""
        android:layout_marginTop="1dip"
        android:background="@color/gray"
        android:textColor="@color/black_color"
        android:textSize="18sp" 
        android:paddingLeft="15dip"
        android:gravity="center_vertical"/>
    
    
     <include 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/afterschoolSubCategory_text"
         android:layout_marginLeft="15dip"
        android:layout_marginTop="10dip"
       
        android:visibility="gone"
        android:layout_marginRight="15dip"
        layout="@layout/search_edit"
        android:id="@+id/editSchoolLayout"/>

    <ListView
        android:id="@+id/containallCatandSubCat_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/editSchoolLayout"
        android:layout_marginLeft="15dip"
        android:layout_marginTop="10dip" >
    </ListView>

</RelativeLayout>