<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:padding="5dip" >

    <ImageView
        android:id="@+id/imageNotificationNewFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="14dp"
        android:src="@drawable/profile_i" />

    <LinearLayout
        android:id="@+id/layoutNotification"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="3dip"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/imageNotificationNewFragment"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/idNotificationDesc1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dip"
            android:layout_marginRight="5dip"
            android:layout_marginTop="5dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="Description"
            android:textColor="@color/font_blue_color"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/idNotificationDesc2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time"
            android:textColor="@color/black_color"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>