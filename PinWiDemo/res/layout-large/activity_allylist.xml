<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color" >

    <LinearLayout
        android:id="@+id/layout_addnewAlly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/light_bluebackground"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/addally_Image"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:paddingLeft="10dip"
            android:src="@drawable/add_new" />

        <TextView
            android:id="@+id/addally_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingBottom="10dip"
            android:paddingLeft="5dip"
            android:paddingTop="10dip"
            android:text="@string/addallysetting_text"
            android:textColor="@color/font_blue_color"
            android:textSize="@dimen/textBig" />
    </LinearLayout>

    <TextView
        android:id="@+id/updateally_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="2dip"
        android:background="@color/gray"
        android:padding="10dip"
        android:text="@string/ally_update_text"
        android:textColor="@color/black_color"
        android:textSize="@dimen/textLarge" />

    <ListView
        android:id="@+id/containallallyname_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/layout_addnewAlly"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/updateally_text"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
         android:layout_marginTop="20dip" >
    </ListView>

</RelativeLayout>