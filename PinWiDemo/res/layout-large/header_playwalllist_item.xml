<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:paddingBottom="15dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <com.hatchtact.pinwi.child.HexagonImageView
                android:id="@+id/child_buddies"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/camera_icon"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/buddies_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_marginTop="40dp"
                android:layout_toLeftOf="@+id/buddies_time"
                android:layout_toRightOf="@+id/child_buddies"
                android:singleLine="true"
                android:text="Rachna Khanna"
                android:textColor="@color/black_color"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/buddies_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:singleLine="true"
                android:visibility="gone"
                android:text="Time"
                android:textColor="@color/black_color"
                android:textSize="10sp" />
        </RelativeLayout>
    </LinearLayout>

    

</RelativeLayout>