<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background" >

    <ImageView
        android:id="@+id/image_pinwiForgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dip"
        android:src="@drawable/pinwi_logo1" />

    <TextView
        android:id="@+id/text_forgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_pinwiForgot"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dip"
        android:gravity="center"
        android:text="@string/forgotpassword_text1"
        android:textColor="@color/font_white_color"
        android:textSize="19sp" />

    <ImageView
        android:id="@+id/image_lockforgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_forgot"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dip"
        android:src="@drawable/lock_loginimage" />

    <LinearLayout
        android:id="@+id/layout_abouthelp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="2" >

        <TextView
            android:id="@+id/text_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rectangular_btntransparent"
            android:gravity="center"
            android:padding="7dip"
            android:text="@string/about_text"
            android:textColor="@color/font_white_color"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/text_help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rectangular_btntransparent"
            android:gravity="center"
            android:padding="7dip"
            android:text="@string/help_text"
            android:textColor="@color/font_white_color"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_enterEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_lockforgot"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dip"
        android:text="@string/forgotpassword_emailheader"
        android:textColor="@color/font_white_color"
        android:textSize="19sp" />

    <EditText
        android:id="@+id/text_emailforgot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_enterEmail"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dip"
        android:hint="Email Id"
        android:singleLine="true"
        android:textColor="@color/font_white_color"
        android:textColorHint="@color/font_white_color"
        android:textSize="22sp" />

    <Button
        android:id="@+id/button_continueforgotEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_emailforgot"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="40dip"
        android:background="@drawable/rectangular_btn"
        android:padding="10dip"
        android:text="@string/continue_text"
        android:textColor="@color/black_color"
        android:textSize="22sp" />

    <!-- </RelativeLayout> -->
    <!-- </ScrollView> -->

</RelativeLayout>