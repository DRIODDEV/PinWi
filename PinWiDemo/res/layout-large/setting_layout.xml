<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical" >

    <Button
        android:id="@+id/button_save"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rectangular_btn"
        android:text="Save"
        android:textColor="@color/black_color"
        android:textSize="@dimen/textLarge" />

    <LinearLayout
        android:id="@+id/main_layout_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/text_setting1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dip"
            android:padding="8dp"
            android:text="Profile Setup"
            android:textColor="@color/black_color"
            android:textSize="@dimen/textLarge" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/text_setting2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dip"
            android:padding="8dp"
            android:text="Set Location"
            android:textColor="@color/black_color"
            android:textSize="@dimen/textLarge"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/gray"
            android:visibility="gone" />

        <TextView
            android:id="@+id/text_setting3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dip"
            android:padding="8dp"
            android:text="Child Profile"
            android:textColor="@color/black_color"
            android:textSize="@dimen/textLarge" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/text_setting4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dip"
            android:padding="8dp"
            android:text="Ally"
            android:textColor="@color/black_color"
            android:textSize="@dimen/textLarge"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/gray"
            android:visibility="gone" />

        <TextView
            android:id="@+id/text_setting5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dip"
            android:padding="8dp"
            android:text="Notification"
            android:textColor="@color/black_color"
            android:textSize="@dimen/textLarge" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/text_setting6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dip"
            android:padding="8dp"
            android:text="Holiday Calendar"
            android:textColor="@color/black_color"
            android:textSize="@dimen/textLarge" />

        <TextView
            android:id="@+id/text_setting7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray"
            android:padding="10dp"
            android:text="Reminder"
            android:textColor="@color/black_color"
            android:textSize="@dimen/textBig" />

        <RelativeLayout
            android:id="@+id/horizontal_layout_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dip"
            android:layout_marginRight="2dip"
            android:padding="8dp" >

            <TextView
                android:id="@+id/text_setting8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Frequency"
                android:textColor="@color/black_color"
                android:textSize="@dimen/textLarge" />

            <TextView
                android:id="@+id/text_setting9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Daily"
                android:textColor="@color/black_color"
                android:textSize="@dimen/textLarge" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/gray" />

        <RelativeLayout
            android:id="@+id/horizontal_layout_setting1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dip"
            android:layout_marginRight="2dip"
            android:padding="8dp" >

            <TextView
                android:id="@+id/text_setting10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Time"
                android:textColor="@color/black_color"
                android:textSize="@dimen/textLarge" />

            <TextView
                android:id="@+id/text_setting11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="19:30"
                android:textColor="@color/black_color"
                android:textSize="@dimen/textLarge" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/gray"
            android:visibility="visible" />

        <RelativeLayout
            android:id="@+id/horizontal_layout_reminderoff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dip"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:visibility="visible" >

            <TextView
                android:id="@+id/text_settingreminderOff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Reminder"
                android:textColor="@color/black_color"
                android:textSize="@dimen/large_text" />

            <Switch
                android:id="@+id/reminder_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dip"
                android:checked="true" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>