<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/child_bg" >

    <include
        android:id="@+id/child_set_star_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        layout="@layout/header_child_set_star" />

    <LinearLayout
        android:id="@+id/child_subject_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/child_set_star_header"
        android:layout_centerHorizontal="true"
        android:layout_margin="2dip"
        android:orientation="horizontal" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/child_subject_indicator"
        android:orientation="vertical"
        android:weightSum="1" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="3dip"
            android:layout_weight=".55"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_margin="2dip"
                android:layout_weight=".5"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/child_smiley"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="5dip"
                    android:scaleType="centerCrop"
                    android:src="@drawable/child_smiley1" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:gravity="left|center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/invisible_view_for_skip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="aagvms"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/child_rating_confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/invisible_view_for_skip"
                    android:layout_margin="10dip"
                    android:background="@drawable/child_skip_rating" />

                <LinearLayout
                    android:id="@+id/child_star_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="6dip"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dip" >

                        <ImageView
                            android:id="@+id/child_10_rating_selected"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/child_10_rating_selected" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dip" >

                        <ImageView
                            android:id="@+id/child_9_rating_selected"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/child_9_rating_selected" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dip" >

                        <ImageView
                            android:id="@+id/child_8_rating_selected"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/child_8_rating_selected" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dip" >

                        <ImageView
                            android:id="@+id/child_7_rating_selected"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/child_7_rating_selected" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dip" >

                        <ImageView
                            android:id="@+id/child_6_rating_selected"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/child_6_rating_selected" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dip" >

                        <ImageView
                            android:id="@+id/child_5_rating_selected"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/child_5_rating_selected" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dip" >

                        <ImageView
                            android:id="@+id/child_4_rating_selected"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/child_4_rating_selected" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dip" >

                        <ImageView
                            android:id="@+id/child_3_rating_selected"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/child_3_rating_selected" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dip" >

                        <ImageView
                            android:id="@+id/child_2_rating_selected"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/child_2_rating_selected" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dip" >

                        <ImageView
                            android:id="@+id/child_1_rating_selected"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/child_1_rating_selected" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_weight=".45" >

            <RelativeLayout
                android:id="@+id/child_set_star_pinwi_bottom_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/child_star_curved_text" >

                <RelativeLayout
                    android:id="@+id/child_set_star_pinwi_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/child_circular_black_background"
                    android:padding="3dip" >

                    <ImageView
                        android:id="@+id/child_pinwheel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="matrix"
                        android:src="@drawable/child_pinwheel" />
                </RelativeLayout>
            </RelativeLayout>

            <ImageView
                android:id="@+id/child_pinwheel_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/child_set_star_pinwi_bottom_layout"
                android:src="@drawable/arrowindication" 
                android:visibility="gone"/>
            
             <ImageView
                android:id="@+id/child_skip_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/child_set_star_pinwi_bottom_layout"
                android:src="@drawable/arrowindicationskip" 
                android:visibility="gone"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>