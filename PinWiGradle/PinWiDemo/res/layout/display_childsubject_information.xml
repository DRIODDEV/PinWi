<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color" >

    <LinearLayout
        android:id="@+id/layout_displayallList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/layout_subjectNameVerified"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/subjectName_textDisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text=""
                android:textColor="@color/black_color"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/School_verified_nonverified_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dip"
                android:gravity="center"
                android:src="@drawable/nonverified"
                android:visibility="invisible" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layout_allDaysDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/subject_sunday_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:background="@drawable/dot_gray"
                android:gravity="center"
                android:text="@string/sunday_text"
                android:textColor="@color/black_color" />

            <TextView
                android:id="@+id/subject_monday_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginTop="10dip"
                android:background="@drawable/dot_gray"
                android:gravity="center"
                android:text="@string/monday_text"
                android:textColor="@color/black_color" />

            <TextView
                android:id="@+id/subject_tuesday_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginTop="10dip"
                android:background="@drawable/dot_gray"
                android:gravity="center"
                android:text="@string/tuesday_text"
                android:textColor="@color/black_color" />

            <TextView
                android:id="@+id/subject_wednesday_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginTop="10dip"
                android:background="@drawable/dot_gray"
                android:gravity="center"
                android:text="@string/wednesday_text"
                android:textColor="@color/black_color" />

            <TextView
                android:id="@+id/subject_thursday_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginTop="10dip"
                android:background="@drawable/dot_gray"
                android:gravity="center"
                android:text="@string/thursday_text"
                android:textColor="@color/black_color" />

            <TextView
                android:id="@+id/subject_friday_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginTop="10dip"
                android:background="@drawable/dot_gray"
                android:gravity="center"
                android:text="@string/friday_text"
                android:textColor="@color/black_color" />

            <TextView
                android:id="@+id/subject_saturday_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginTop="10dip"
                android:background="@drawable/dot_gray"
                android:gravity="center"
                android:text="@string/saturday_text"
                android:textColor="@color/black_color" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/view_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/layout_displayallList"
        android:layout_margin="10dip" />

</RelativeLayout>