<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/layoutFriendDtails"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/parentDetailheading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="Child Detail"
            android:textSize="18sp" />

        <include
            android:id="@+id/layout_childrowitem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            layout="@layout/layout_child_item" >
        </include>

        <TextView
            android:id="@+id/childDetailheading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="Exhilarators"
            android:textSize="18sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_marginTop="5dip" >

            <LinearLayout
                android:id="@+id/linearlayoutnetworkinterestdrivers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" />

            <include
                android:id="@+id/layout_ehilarotorsnoitem"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                layout="@layout/list_network_connection_rowitem" >
            </include>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>