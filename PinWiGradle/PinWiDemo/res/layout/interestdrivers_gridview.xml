<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
  
   
   >

    <ImageView
        android:id="@+id/image_img1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:src="@drawable/eight_big" />

    <LinearLayout
        android:id="@+id/layout_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/image_img1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/event_title_txt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:singleLine="true"
            android:text="Title"
            android:textColor="@color/font_white_color"
            android:textSize="@dimen/textSmall"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/event_title_txt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:gravity="center|left"
            android:layout_marginRight="5dp"
          
            android:text="Desc"
            android:textColor="@color/font_white_color"
            android:textSize="@dimen/textSmall"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:id="@+id/image_img2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/image_img1"
        android:layout_marginRight="5dip"
        android:layout_toLeftOf="@id/layout_info"
        android:src="@drawable/up_driver" />

    <ImageView
        android:id="@+id/image_imgNew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dip"
       android:visibility="gone"
        android:src="@drawable/new_found" />

</RelativeLayout>