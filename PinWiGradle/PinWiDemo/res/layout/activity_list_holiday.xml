<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color" >

    <LinearLayout
        android:id="@+id/layout_addnewHoliday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/addHolidayImage"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:paddingLeft="15dip"
            android:src="@drawable/add_new" />

        <TextView
            android:id="@+id/addHoliday_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingBottom="10dip"
            android:paddingLeft="5dip"
            android:paddingTop="10dip"
            android:text="Add New Holiday"
            android:textColor="@color/font_blue_color"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_holidaylistHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/titleHolidayList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray"
            android:paddingBottom="5dp"
            android:paddingLeft="15dip"
            android:paddingRight="10dip"
            android:paddingTop="5dp"
            android:text="Holidays List"
            android:textColor="@color/black_color"
            android:textSize="16sp" />

        <View
            android:id="@+id/line_holidayList"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/gray" />
    </LinearLayout>

    <ListView
        android:id="@+id/holidayNmaeList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/layout_addnewHoliday"
        android:layout_below="@+id/layout_holidaylistHeading"
        android:layout_alignParentLeft="true"
       
        android:layout_marginBottom="10dp" >
    </ListView>

</RelativeLayout>