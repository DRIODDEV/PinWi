<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color" >

        <TextView
            android:id="@+id/text_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dip"
            android:text="@string/welcome_text"
            android:visibility="gone"
            android:textColor="@color/black_color"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/image_pinwiIcongetStarted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_welcome"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dip"
            android:src="@drawable/pinwi_logo2" />

        <View
            android:id="@+id/image_pinwiIcongetStarted_line"
            android:layout_width="120dip"
            android:layout_height="1dip"
            android:layout_below="@id/image_pinwiIcongetStarted"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dip"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/text_started"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_pinwiIcongetStarted_line"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_marginTop="20dip"
            android:gravity="center"
            android:text="@string/started_text"
            android:textColor="@color/black_color"
            android:textSize="15sp" />


        <ImageView
            android:id="@+id/image_headerBelow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_alignParentBottom="true"

            android:background="@drawable/below_header" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:weightSum="2"
            android:layout_above="@+id/image_headerBelow"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_marginBottom="10dp"
            android:id="@+id/layoutButtonGetStarted"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <Button
                android:id="@+id/button_getStarted"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/btngreen_color"
                android:text="@string/free_text"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:textColor="@color/black_color"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button_fullver"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:background="@color/font_blue_color"
                android:text="@string/full_text"
                android:layout_weight="1"
                android:visibility="visible"
                android:textColor="@color/black_color"
                android:textSize="18sp" />
        </LinearLayout>

    </RelativeLayout>
    <ListView
        android:id="@+id/list_slidermenu"
        android:layout_width="220dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#ffffff"
        android:choiceMode="singleChoice"
        android:divider="@color/list_divider"
        android:dividerHeight="1dp"
        android:listSelector="@drawable/list_selector" />
</android.support.v4.widget.DrawerLayout>