<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp" >

    <com.hatchtact.pinwi.child.HexagonImageView
        android:id="@+id/child_alert_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:src="@drawable/camera_icon"
        android:visibility="visible" />

    <TextView
        android:id="@+id/child_alert_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/child_alert_time"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/child_alert_image"
        android:maxLines="2"
        android:text="Hi i received a msg"
        android:textColor="@color/black_color"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/child_alert_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/child_alert_image"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/child_alert_image"
        android:alpha=".6"
        android:singleLine="true"
        android:text="Today,9.57am"
        android:textColor="@color/black_color"
        android:textSize="10sp" />

</RelativeLayout>