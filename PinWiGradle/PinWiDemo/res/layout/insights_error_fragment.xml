<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/btndashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dip"
        android:background="@drawable/rectangular_btn"
        android:padding="5dp"
        android:text="View Sample Report"
        android:textColor="@color/black_color" />

    <LinearLayout
        android:id="@+id/layoutLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/texttypesinsightdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:paddingRight="10dp"
            android:text="Report as on 24 May,2015"
            android:textColor="@color/black_color"
            android:textSize="15sp" />

        <RelativeLayout
            android:id="@+id/layoutOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/gray" >

            <TextView
                android:id="@+id/texttypesinsightqualitybadge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="Unlock in Progress"
                android:textColor="@color/black_color"
                android:textSize="18sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:id="@+id/linearlayouttypesinsightbadge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="3dip"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@+id/imgArrow"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="3dip"
                android:paddingTop="10dp" >

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/chart1"
                    android:layout_width="150dp"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:id="@+id/layoutText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/headerBadge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left|center_vertical"
                        android:text=" "
                        android:textColor="@color/black_color"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/texttypesinsightbadge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left|center_vertical"
                        android:textColor="@color/black_color"
                        android:textSize="15sp"
                        android:textStyle="normal" >
                    </TextView>
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/imgArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="5dp"
                android:src="@drawable/arrow_i" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textinsightinterestdrivers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="@color/gray"
            android:gravity="left"
            android:visibility="gone"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:textColor="@color/black_color"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/notenoughdata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_marginTop="55dip"
            android:gravity="center"
            android:text="Some Interesting Facts"
            android:textColor="@color/black_color"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            >
            <TextView
                android:id="@+id/texterrorinsightfragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:paddingBottom="5dip"
                android:visibility="gone"
                android:text="Know more about interests!"
                android:textColor="@color/font_blue_color"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textsmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:gravity="center"
                android:visibility="gone"
                android:layout_below="@+id/texterrorinsightfragment"
                android:text="Fun facts. Information. Blog."
                android:textColor="@color/gray"
                android:textSize="15sp" />
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_below="@+id/layoutLinear"
        android:layout_above="@+id/btndashboard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:id="@+id/layoutPager">
        <LinearLayout
            android:id="@+id/layoutDots"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_pinwiIcongetStarted_line"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            >
            <ImageView
                android:id="@+id/imagedot"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/dot_darkblue"
                />


            <ImageView
                android:id="@+id/imagedottwo"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/dot_gray"
                />

            <ImageView
                android:id="@+id/imagedotthree"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="5dp"


                android:src="@drawable/dot_gray"
                />

            <ImageView
                android:id="@+id/imagedotfour"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="5dp"

                android:src="@drawable/dot_gray"
                />
            <ImageView
                android:id="@+id/imagedotfive"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="5dp"

                android:src="@drawable/dot_gray"
                />
            <ImageView
                android:id="@+id/imagedotsix"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="5dp"

                android:src="@drawable/dot_gray"
                />
        </LinearLayout>



        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_below="@id/layoutDots"
            android:layout_above="@+id/tvBlog"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v4.view.ViewPager>

    </RelativeLayout>
</RelativeLayout>