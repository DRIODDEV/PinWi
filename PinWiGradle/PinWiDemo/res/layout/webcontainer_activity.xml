<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color" >

        <WebView
            android:id="@+id/webView1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/layoutButtonGetStarted"
            android:layout_gravity="top"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:id="@+id/layoutButtonGetStarted"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <Button
                android:id="@+id/button_fullver"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/font_blue_color"
                android:text="@string/full_text"
                android:layout_weight="1"
                android:visibility="visible"
                android:textColor="@color/font_white_color"
                android:textSize="18sp" />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"/>


            <Button
                android:id="@+id/button_getStarted"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/font_blue_color"
                android:text="Start Over"
                android:layout_weight="1"
                android:textColor="@color/font_white_color"
                android:textSize="18sp" />
        </LinearLayout>

    </RelativeLayout>
    <ListView
        android:id="@+id/list_slidermenu"
        android:layout_width="220dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#ffffff"
        android:choiceMode="singleChoice"
        android:divider="@color/list_divider"
        android:dividerHeight="1dp"
        android:listSelector="@drawable/list_selector" />
</android.support.v4.widget.DrawerLayout>