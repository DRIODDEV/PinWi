<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/layoutFriendDtails"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
             android:id="@+id/profileLoggedheading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="My Profile"
           android:textSize="@dimen/large_text" />

        <include
            android:id="@+id/layout_profilerowitem"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            layout="@layout/myprofile_parent_rowitem"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp" >
        </include>

        <TextView
              android:id="@+id/childDetailheadingProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="Children"
             android:paddingTop="5dp"
            android:paddingBottom="5dp"
            
            android:textSize="@dimen/large_text"/>

        <ListView
            android:id="@+id/listchildrenparentdetailprofile_network"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_marginTop="5dip"
            android:visibility="visible" >
        </ListView>
    </LinearLayout>

</RelativeLayout>