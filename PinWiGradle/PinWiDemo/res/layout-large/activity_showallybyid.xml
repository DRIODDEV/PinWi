<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color" >

    <TextView
        android:id="@+id/activityName_text"
        android:layout_width="match_parent"
        android:layout_height="30dip"
        android:layout_alignParentTop="true"
        android:layout_marginTop="2dip"
        android:background="@color/gray"
        android:gravity="center_vertical"
        android:paddingLeft="15dip"
        android:textColor="@color/black_color"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/informAlly_text"
        android:layout_width="match_parent"
        android:layout_height="30dip"
        android:layout_below="@id/activityName_text"
        android:layout_marginTop="1dip"
        android:background="@color/gray"
        android:gravity="center_vertical"
        android:paddingLeft="15dip"
        android:text="@string/inform_allyText"
        android:textColor="@color/black_color"
        android:textSize="22sp" />

    <ListView
        android:id="@+id/containall_allyData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/informAlly_text"
        android:layout_marginLeft="15dip"
         android:layout_above="@+id/layout_addAllyNotification"
        android:layout_marginTop="15dip" >
    </ListView>

    <LinearLayout
        android:id="@+id/layout_addAllyNotification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingTop="10dip" 
        android:paddingBottom="10dip">

        <ImageView
            android:id="@+id/image_addNotify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_weight="0.9"
            android:src="@drawable/add_new" />

        <TextView
            android:id="@+id/text_addallyNotify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="2dip"
            android:layout_weight="0.1"
            android:focusable="false"
            android:text="@string/addnotifyally_text"
            android:textColor="@color/font_blue_color"
            android:textSize="20sp" />
    </LinearLayout>

</RelativeLayout>