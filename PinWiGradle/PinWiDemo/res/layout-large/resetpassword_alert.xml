<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/text_resetPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dip"
        android:text="@string/reset_text"
        android:textColor="@color/black_color"
        android:textSize="@dimen/textxLarge" />

    <TextView
        android:id="@+id/text_entercode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_resetPassword"
        android:layout_marginLeft="35dip"
        android:layout_marginTop="10dip"
        android:gravity="center"
        android:text="@string/code_reset_text"
        android:textColor="@color/black_color"
        android:textSize="@dimen/textLarge" />

    <EditText
        android:id="@+id/text_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_resetPassword"
        android:layout_marginLeft="25dip"
        android:layout_marginTop="10dip"
        android:singleLine="true"
        android:hint="enter code"
        android:textColor="@color/black_color"
        android:layout_toRightOf="@id/text_entercode" />

    <View
        android:id="@+id/line_register_careTaker"
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:layout_below="@id/text_entercode"
        android:layout_marginTop="20dip"
        android:background="@color/font_blue_color" />

    <TextView
        android:id="@+id/button_submitcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line_register_careTaker"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dip"
        android:text="@string/submit_text"
        android:textColor="@color/font_blue_color"
        android:textSize="@dimen/textxLarge" />

    <TextView
        android:id="@+id/text_hiddenconfirmAlert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_submitcode"
        android:layout_marginTop="2dip" />

</RelativeLayout>