<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color" >

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
         >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            
            <LinearLayout
                android:id="@+id/layout_subNames"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               
                android:orientation="vertical"
                >
            
            <TextView
                android:id="@+id/SelectSubjectName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft ="15dip"
                android:paddingRight="10dip"
              android:paddingTop="5dp"
              android:paddingBottom="5dp"
                android:background="@color/gray"
                android:text="Yoga"
                android:textColor="@color/black_color"
                android:textSize="22sp" />
            
             <View
                android:id="@+id/text_SelectSubjectName"
                android:layout_width="match_parent"
                android:layout_height="1dip"
            
                android:background="@color/gray" />
            
            <TextView
                android:id="@+id/informAllyLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft ="15dip"
                android:paddingRight="10dip"
                android:layout_marginTop="2dip"
               android:paddingTop="5dp"
              android:paddingBottom="5dp"
                android:background="@color/gray"
                android:text="INFORM ALLY"
                android:textColor="@color/black_color"
                android:textSize="22sp" />
            
            <View
                android:id="@+id/text_informAllyLabel"
                android:layout_width="match_parent"
                android:layout_height="1dip"
             
              
                android:background="@color/gray" />
            
            </LinearLayout>

             <LinearLayout
                android:id="@+id/layout_allyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
               android:layout_below="@id/layout_subNames"
                android:orientation="horizontal"
                android:weightSum="1.0" >
                
                 
                 <TextView
                    android:id="@+id/setAllyName_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.35"
                    android:text="Select Ally"
                    android:textColor="@color/black_color"
                    android:textSize="22sp" />

            <TextView
                android:id="@+id/text_allyInformName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
              
               
               
                
                android:singleLine="true"
                android:layout_weight="0.65"
                 android:gravity="right"
                android:text=""
                android:textColor="@color/black_color"
                android:textSize="22sp" />
            
             

              
            </LinearLayout>
            
              <View
                android:id="@+id/text_allyInform_Name1"
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_below="@id/layout_allyName"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="10dip"
                android:background="@color/gray" />

            <LinearLayout
                android:id="@+id/layout_dateInformAlly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_allyInform_Name1"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
               
                android:orientation="horizontal"
                android:weightSum="1.0" >

                <TextView
                    android:id="@+id/setdate_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.35"
                    android:text="@string/set_date_text"
                    android:textColor="@color/black_color"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/setdateValueAlly_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.65"
                    android:gravity="right"
                    android:textColor="@color/black_color"
                    android:textSize="22sp" />
            </LinearLayout>

            <View
                android:id="@+id/text_allyInform_invi2"
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_below="@id/layout_dateInformAlly"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="10dip"
                android:background="@color/gray" />

            <LinearLayout
                android:id="@+id/layout_timeInformAlly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_allyInform_invi2"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:orientation="horizontal"
                android:weightSum="1.0" >

                <TextView
                    android:id="@+id/settime_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:text="@string/set_time_text"
                    android:textColor="@color/black_color"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/settimeValueAlly_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:gravity="right"
                    android:textColor="@color/black_color"
                    android:textSize="22sp" />
            </LinearLayout>

           

            <TextView
                android:id="@+id/SelectOneLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_timeInformAlly"
                android:paddingLeft ="15dip"
                android:paddingRight="10dip"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/gray"
                android:text="SELECT ONE"
                android:textColor="@color/black_color"
                android:textSize="22sp" />

            <LinearLayout
                android:id="@+id/layout_pickInformAlly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/SelectOneLabel"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="10dip"
                android:orientation="horizontal"
                android:weightSum="1.0" >

                <TextView
                    android:id="@+id/setpick_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="@string/set_pick_text"
                    android:textColor="@color/black_color"
                    android:textSize="22sp" />

                <Switch
                    android:id="@+id/setpickValue_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:textColor="@color/black_color"
                    android:textSize="22sp" />
            </LinearLayout>

            <View
                android:id="@+id/text_allyInform_invi4"
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_below="@id/layout_pickInformAlly"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="10dip"
                android:background="@color/gray" />

            <LinearLayout
                android:id="@+id/layout_dropInformAlly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_allyInform_invi4"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="10dip"
                android:orientation="horizontal"
                android:weightSum="1.0" >

                <TextView
                    android:id="@+id/setdrop_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="@string/set_drop_text"
                    android:textColor="@color/black_color"
                    android:textSize="22sp" />

                <Switch
                    android:id="@+id/setdropValue_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:textColor="@color/black_color"
                    android:textSize="22sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/layout_specialInstrutionInformAlly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_dropInformAlly"
                android:layout_marginTop="10dip"
                android:background="@color/gray"
                android:gravity="center_vertical"
                android:paddingBottom="5dip"
                android:paddingLeft="15dip"
                android:paddingTop="5dip"
                android:text="@string/special_instrution_text"
                android:textColor="@color/gray_calender"
                android:textSize="19sp" />

            <EditText
                android:id="@+id/text_specialInstrutionAlly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_specialInstrutionInformAlly"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:layout_marginTop="10dip"
                android:hint="Type here..."
                android:maxLines="5"
                android:textSize="22sp" />

            <LinearLayout
                android:id="@+id/layout_sms_email"
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:layout_below="@id/text_specialInstrutionAlly"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="30dip"
                android:orientation="horizontal"
                android:weightSum="2" >

                <TextView
                    android:id="@+id/text_SMS"
                    android:layout_width="match_parent"
                    android:layout_height="45dip"
                    android:layout_weight="1"
                    android:background="@drawable/rectangular_btnrelation"
                    android:gravity="center"
                    android:alpha=".5"
                    android:text="@string/sms_text"
                    android:textColor="@color/black_color"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/text_EMAIL"
                    android:layout_width="match_parent"
                    android:layout_height="45dip"
                    android:layout_weight="1"
                    android:background="@drawable/rectangular_btnrelation_selection"
                    android:gravity="center"
                    android:text="@string/email_text"
                    android:textSize="22sp" />
            </LinearLayout>

            <Button
                android:id="@+id/button_continueInformAlly"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/layout_sms_email"
                android:layout_margin="10dip"
                android:background="@drawable/rectangular_btn"
                android:text="@string/saveNotifytext"
                android:textColor="@color/black_color"
                android:textSize="22sp" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>