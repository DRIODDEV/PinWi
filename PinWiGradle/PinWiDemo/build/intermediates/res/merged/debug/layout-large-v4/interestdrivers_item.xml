<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainlayoutinsioghtinterestdrivers"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="20dp" >

    <ImageView
        android:id="@+id/imageinterstdrivers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/gray_arrow" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/imageinterstdrivers"
        android:orientation="horizontal"
        android:weightSum="1.0" >

        <TextView
            android:id="@+id/texttypesinsightinterestdriversname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.65"
            android:paddingLeft="5dip"
            android:paddingTop="10dp"
            android:text="Non-Influencers"
            android:textSize="@dimen/textNormal" />

        <LinearLayout
            android:id="@+id/drawCircleInterestdrivers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.35"
            android:orientation="horizontal" />
    </LinearLayout>

</RelativeLayout>