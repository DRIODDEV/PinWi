<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btndashboard"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/timerimageinsight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:src="@drawable/timer" />

        <TextView
            android:id="@+id/notenoughdata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dip"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:layout_marginTop="30dip"
            android:gravity="center"
            android:text="Not enough data for Insight Reports"
            android:textColor="@color/black_color"
            android:textSize="@dimen/textBig" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/texterrorinsightfragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dip"
                android:layout_marginLeft="30dip"
                android:layout_marginRight="30dip"
                android:layout_marginTop="30dip"
                android:gravity="center"
                android:text="Not enough data for Insight Reports"
                android:textColor="@color/black_color"
                android:textSize="@dimen/textBig" />
        </ScrollView>
    </LinearLayout>

    <Button
        android:id="@+id/btndashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dip"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:layout_marginTop="15dip"
        android:background="@drawable/rectangular_btn"
        android:padding="5dp"
        android:text="Go back to Dashboard"
        android:textColor="@color/black_color" />

</RelativeLayout>