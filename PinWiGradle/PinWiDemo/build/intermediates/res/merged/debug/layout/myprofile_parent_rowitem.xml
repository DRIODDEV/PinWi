<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:paddingBottom="5dp"
    android:paddingTop="5dp" >

    <ImageView
        android:id="@+id/imgUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:focusable="false"
        android:src="@drawable/child_image" />

    <Button
        android:id="@+id/btn_networkconnectionitem"
        android:layout_width="wrap_content"
        android:layout_height="30dip"
        android:layout_above="@+id/emptyView"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="2dp"
        android:background="@drawable/rectangular_btn_bluecolornetwork"
        android:focusable="false"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Settings"
        android:textColor="@color/font_blue_color"
        android:textSize="14sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/emptyView"
        android:layout_width="10dp"
        android:layout_height="10dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="2dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />

    <LinearLayout
        android:id="@+id/layoutNameNetwork"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@id/btn_networkconnectionitem"
        android:layout_toRightOf="@id/imgUser"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txtParentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="ParentName"
            android:textColor="@color/black_color"
            android:textSize="16sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/txtCityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:text="CityName"
            android:textColor="@color/font_color"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtAddressProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutNameNetwork"
        android:layout_marginLeft="10dp"
        android:maxLines="2"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/imgUser"
        android:text="Address:"
        android:textColor="@color/font_color"
        android:textSize="14sp" />

</RelativeLayout>