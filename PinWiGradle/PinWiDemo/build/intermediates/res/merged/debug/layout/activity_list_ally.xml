<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color" >
    
    
    <LinearLayout
        android:id="@+id/layout_addnewAlly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/light_bluebackground"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/addally_Image"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:paddingLeft="15dip"
            android:src="@drawable/add_new" />

        <TextView
            android:id="@+id/addally_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingBottom="10dip"
            android:paddingLeft="5dip"
            android:paddingTop="10dip"
            android:text="Add New Ally"
            android:textColor="@color/font_blue_color"
            android:textSize="15sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/afterschoolInformAlly_text"
        android:layout_width="match_parent"
        android:layout_height="30dip"
        android:layout_alignParentTop="true"
        android:layout_marginTop="2dip"
        android:background="@color/gray"
        android:gravity="center_vertical"
         android:paddingLeft="15dip"
        android:textColor="@color/black_color"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/iformAlly_text"
        android:layout_width="match_parent"
        android:layout_height="30dip"
        android:layout_below="@id/afterschoolInformAlly_text"
        android:layout_marginTop="1dip"
        android:background="@color/gray"
        android:gravity="center_vertical"
        android:text="SELECT ALLY"
        android:textColor="@color/black_color"
        android:paddingLeft="15dip"
        android:textSize="18sp" />
    
      <include 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iformAlly_text"
         android:layout_marginLeft="15dip"
        android:layout_marginTop="10dip"
        android:layout_marginRight="15dip"
        layout="@layout/search_edit"
        android:id="@+id/editSchoolLayout"/>

    
   	<ListView 
   	    android:id="@+id/containall_allyNameList"
   	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
		android:layout_below="@id/editSchoolLayout"
        android:layout_marginLeft="15dip"
        android:layout_above="@id/layout_addnewAlly"
        android:layout_marginTop="10dip">
   	    
   	</ListView>
   	
   	
