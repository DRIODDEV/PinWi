<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/child_header_bg" >

    <RelativeLayout
        android:id="@+id/child_header_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_centerInParent="true"
        
       android:layout_toLeftOf="@+id/child_star_header_music_voiceover"
        android:layout_gravity="fill_horizontal" >

        <TextView
            android:id="@+id/child_header_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="Subject Name"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            />
    </RelativeLayout>

    <ImageView
        android:id="@+id/child_star_header_music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
         android:padding="15dp"
         android:background="@drawable/child_volume"
         android:layout_marginTop="15dip"
        android:layout_marginRight="10dip" />
        
      <ImageView
        android:id="@+id/child_star_header_music_voiceover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/child_star_header_music"
        android:layout_centerVertical="true"
         android:background="@drawable/child_voiceover"
         android:padding="15dp"
        android:layout_marginTop="15dip"
        android:layout_marginRight="5dip" />
      
</RelativeLayout>